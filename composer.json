{
  "name": "elgibor-solution/laravel-whatsapp-meta",
  "description": "Laravel package for Meta WhatsApp Business Cloud API: templates CRUD, sending messages, multi-account, broadcasts, webhooks.",
  "type": "library",
  "license": "Apache-2.0",
  "autoload": {
    "psr-4": {
      "ESolution\\WhatsApp\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "ESolution\\WhatsApp\\WhatsAppServiceProvider"
      ],
      "aliases": {
        "WhatsApp": "ESolution\\WhatsApp\\Facades\\WhatsApp"
      }
    }
  },
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/http": "^10.0|^11.0|^12.0",
    "illuminate/queue": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "mockery/mockery": "^1.6"
  },
  "autoload-dev": {
    "psr-4": {
      "ESolution\\WhatsApp\\Tests\\": "tests/"
    }
  }
}
