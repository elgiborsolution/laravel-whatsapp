{
  "name": "elgibor-solution/laravel-whatsapp-meta",
  "description": "Laravel package for Meta WhatsApp Business Cloud API: templates CRUD, sending messages, multi-account, broadcasts, webhooks.",
  "version": "1.0.0",
  "type": "library",
  "license": "APACHE 2.0",
  "autoload": {
    "psr-4": {
      "ESolution\\WhatsApp\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "ESolution\\WhatsApp\\WhatsAppServiceProvider"
      ],
      "aliases": {
        "WhatsApp": "ESolution\\WhatsApp\\Facades\\WhatsApp"
      }
    }
  },
  "require": {
    "php": ">=8.1",
    "illuminate/support": "^10.0|^11.0",
    "illuminate/http": "^10.0|^11.0",
    "illuminate/queue": "^10.0|^11.0"
  }
}
